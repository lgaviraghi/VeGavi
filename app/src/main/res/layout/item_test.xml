<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_dimen_value"
    android:orientation="horizontal"
    android:padding="@dimen/default_dimen_value">

    <TextView
        android:id="@+id/testPrincipaleTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/section_test_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_dimen_value"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/chapterAndDescription"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/testPrincipaleTitle"
        android:text="@string/section_test_chapter"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_dimen_value" />


</RelativeLayout>